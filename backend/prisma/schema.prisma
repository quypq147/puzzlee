generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ================= ENUMS =================

enum SystemRole {
  ADMIN // Admin của toàn bộ hệ thống phần mềm (Dev/Owner)
  USER  // Người dùng bình thường
}

enum OrganizationRole {
  OWNER  // Người tạo tổ chức (có quyền xoá, thanh toán)
  ADMIN  // Quản lý tổ chức (thêm/sửa event, mời người)
  MEMBER // Thành viên (chỉ xem hoặc thao tác hạn chế)
}

enum EventRole {
  HOST        // Người chủ trì sự kiện (trong context 1 event cụ thể)
  MODERATOR   // Trợ giảng/Duyệt câu hỏi
  PARTICIPANT // Người tham gia
}

// Các enum khác giữ nguyên
enum QuestionStatus {
  PENDING   // Chờ duyệt
  APPROVED  // Đã hiện
  REJECTED  // Bị từ chối
  HIDDEN    // Đã ẩn
}

enum QuestionType {
  QA      // Câu hỏi thường
  POLL    // Bình chọn trắc nghiệm
  QUIZ    // Câu hỏi đúng sai (nếu cần mở rộng sau này)
}

enum VoteType {
  UPVOTE
  DOWNVOTE
}


// ================= MODELS =================

model Organization {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  avatarUrl   String?

  members     OrganizationMember[]
  events      Event[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("organizations")
}

model OrganizationMember {
  id             String           @id @default(uuid())
  userId         String
  organizationId String
  role           OrganizationRole @default(MEMBER)
  joinedAt       DateTime         @default(now())

  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("organization_members")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  username      String    @unique
  passwordHash  String?
  fullName      String?
  avatarUrl     String?
  systemRole    SystemRole @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  resetToken        String?   @map("reset_token")
  resetTokenExpiry  DateTime? @map("reset_token_expiry")

  organizations OrganizationMember[]
  eventParticipations EventMember[]
  questions     Question[]
  answers       Answer[]
  votes         Vote[]
  comments      Comment[]
  notifications Notification[]

  @@map("users")
}

model Event {
  id             String   @id @default(uuid())
  code           String   @unique
  title          String
  description    String?
  startDate      DateTime @default(now())
  isActive       Boolean  @default(true)

  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  creatorId      String?

  members        EventMember[]
  questions      Question[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([code])
  @@index([organizationId])
  @@map("events")
}

model EventMember {
  id        String    @id @default(uuid())
  eventId   String
  userId    String
  role      EventRole @default(PARTICIPANT)
  joinedAt  DateTime  @default(now())
  isBanned  Boolean   @default(false)

  event     Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@map("event_members")
}

model Question {
  id           String         @id @default(uuid())
  content      String
  isAnonymous  Boolean        @default(false)
  isPinned     Boolean        @default(false)
  isAnswered   Boolean        @default(false)
  status       QuestionStatus @default(PENDING) // Mặc định chờ duyệt nếu bật chế độ duyệt
  type         QuestionType   @default(QA)
  
  upvotes      Int            @default(0) // Cache số lượng vote để query nhanh (Denormalization có kiểm soát)
  
  eventId      String
  event        Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)

  authorId     String?        // Nullable nếu user ẩn danh hoàn toàn (tuỳ logic, nhưng nên lưu ID để ban nếu spam)
  author       User?          @relation(fields: [authorId], references: [id], onDelete: SetNull)

  // Quan hệ
  answers      Answer[]
  votes        Vote[]
  pollOptions  PollOption[]   // Nếu là dạng POLL
  comments     Comment[]

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([eventId, status]) // Query phổ biến: Lấy tất cả câu hỏi đã duyệt của Event X
  @@map("questions")
}

// Dùng cho trường hợp câu hỏi dạng Poll (Trắc nghiệm)
model PollOption {
  id          String   @id @default(uuid())
  content     String
  questionId  String
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  votes       PollVote[]

  @@map("poll_options")
}

// Lưu vote cho Poll
model PollVote {
  id           String     @id @default(uuid())
  optionId     String
  userId       String
  
  option       PollOption @relation(fields: [optionId], references: [id], onDelete: Cascade)
  // Không cần relation User nếu không muốn track kỹ, nhưng nên có để tránh vote trùng
  
  @@unique([optionId, userId]) // Mỗi người chỉ chọn 1 option (hoặc bỏ unique nếu cho chọn nhiều)
  @@map("poll_votes")
}

model Answer {
  id         String   @id @default(uuid())
  content    String
  isAccepted Boolean  @default(false) // Câu trả lời được ghim/chấp nhận bởi Host

  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  authorId   String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("answers")
}

// Bảng Vote chung cho câu hỏi (Upvote/Downvote)
model Vote {
  id         String   @id @default(uuid())
  type       VoteType
  
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([questionId, userId]) // Một người chỉ vote 1 lần cho 1 câu hỏi
  @@map("votes")
}

// Bình luận (cho câu hỏi hoặc câu trả lời - ở đây gắn vào câu hỏi để đơn giản hoá)
model Comment {
  id         String   @id @default(uuid())
  content    String
  
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  authorId   String
  author     User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  createdAt  DateTime @default(now())
  
  @@map("comments")
}

model Notification {
  id        String   @id @default(uuid())
  content   String
  isRead    Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@map("notifications")
}